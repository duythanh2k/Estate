<odoo>
  <data>
<!--    ACTION-->
    <record id="estate_property_action" model="ir.actions.act_window">
      <field name="name">Properties</field>
      <field name="res_model">estate.property</field>
      <field name="view_mode">tree,form,kanban</field>
      <!-- search_default_{$name} where {$name} is the filter name -->
  	  <field name="context">{'search_default_available': True}</field>
    </record>

<!--    SEARCH-->
    <record id="estate_property_view_search" model="ir.ui.view">
      <field name="name">estate.property.search</field>
      <field name="model">estate.property</field>
      <field name="arch" type="xml">
        <search string="Properties">
          <field name="name" />
          <field name="property_type_id" />
          <field name="postCode" />
          <field name="expected_price" />
          <field name="bedrooms" />
          <field name="living_area" filter_domain="['|', ('living_area', '=', self), ('living_area', '>', self)]" />
          <field name="facades" />
          <filter
                  string="Available"
                  name="available"
                  domain="['|', ('state', '=', 'new'), ('state', '=', 'offer received')]"
          />
          <group string="Group By">
            <filter string="Postcode" name="postCode" context="{'group_by':'postCode'}" />
          </group>
        </search>
      </field>
    </record>

<!--    FORM-->
    <record id="estate_property_view_form" model="ir.ui.view">
      <field name="name">estate.property.form</field>
      <field name="model">estate.property</field>
      <field name="arch" type="xml">
        <form string="Properties">
          <header>
            <button name="action_sold" type="object" string="Sold" states="new,offer received,offer accepted" />
            <button name="action_canceled" type="object" string="Canceled" states="new,offer received,offer accepted" />
            <field name="state" widget="statusbar" statusbar_visible="new,offer received,offer accepted,sold" />
          </header>

          <sheet>
            <div class="oe_title">
              <h1><field name="name" nolabel="1" /></h1>
              <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" />
            </div>
            <group>
              <group>
                <field name="property_type_id" options="{'no_create': True}" />
                <field name="postCode" />
                <field name="date_availability" />
              </group>
              <group>
                <field name="expected_price" />
                <field name="best_price" />
                <field name="selling_price" />
              </group>
              <notebook>
                <page string="Description">
                  <group>
                    <field name="description" />
                    <field name="bedrooms" />
                    <field name="living_area" />
                    <field name="facades" />
                    <field name="garage" />
                    <field name="garden" />
                    <field name="garden_area" attrs="{'invisible': [('garden', '=', False)]}" />
                    <field name="garden_orientation" attrs="{'invisible': [('garden', '=', False)]}" />
                    <field name="total_area" />
                  </group>
                </page>
                <page string="Offers">
                  <field name="offer_ids"
                         attrs="{'readonly': ['|',
                         ('state', '=', 'offer_accepted'),
                         '|',
                         ('state', '=', 'sold'),
                         ('state', '=', 'canceled')]}"
                  />
                </page>
                <page string="Other Info">
                  <group>
                    <field name="salesperson" />
                    <field name="buyer" />
                  </group>
                </page>
              </notebook>
            </group>
          </sheet>
        </form>
      </field>
    </record>

<!--    KANBAN-->
    <record id="estate_property_view_kanban" model="ir.ui.view">
      <field name="name">estate.property.kanban</field>
      <field name="model">estate.property</field>
      <field name="arch" type="xml">
        <kanban string="Properties" default_group_by="property_type_id"
        group_delete="false" records_draggable="false">
          <field name="state" />
          <templates>
            <t t-name="kanban-box">
              <div class="oe_kanban_global_click">
                <b>
                  <field name="name" />
                </b>
                <br />
                <span>
                  Expected Price:
                  $<field name="expected_price" />
                </span>
                <p t-if="record.state.raw_value === 'offer_received'">
                  Best Offer:
                  $<field name="best_price" />
                </p>
                <p t-if="record.state.raw_value === 'offer_accepted' or record.state.raw_value === 'sold'">
                  Selling Price:
                  $<field name="selling_price" />
                </p>
                <small>
                  <field name="tag_ids" options="{'color_field': 'color'}" />
                </small>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>

<!--    LIST-->
    <record id="estate_property_view_tree" model="ir.ui.view">
      <field name="name">estate.property.tree</field>
      <field name="model">estate.property</field>
      <field name="arch" type="xml">
        <tree string="Properties" decoration-success="state=='offer_received' or state=='offer_accepted'"
  			decoration-bf="state=='offer_accepted'" decoration-muted="state=='sold' or state=='canceled'">
          <field name="name" />
          <field name="state" invisible="1" />
          <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" />
          <field name="property_type_id" />
          <field name="postCode" />
          <field name="bedrooms" />
          <field name="living_area" />
          <field name="expected_price" />
          <field name="selling_price" />
          <field name="date_availability" optional="hidden" />
        </tree>
      </field>
    </record>

  </data>
</odoo>